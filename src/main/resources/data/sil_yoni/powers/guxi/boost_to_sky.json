{ "hidden": true,
    "type": "apoli:multiple",
    "auto_setup_triggers": {
        "type": "apoli:action_over_time",
        "interval": 3,
        "entity_action": {
            "type": "origins:if_else",
            "condition": { "type": "origins:and", "conditions": [
            {   "type": "origins:on_block", "inverted": true },
            {   "type": "origins:riding", "inverted": true },
            {   "type": "apoli:command",
                "command": "data get entity @s SleepTimer",
                "comparison": "==", "compare_to": 0 }
            ] },
            "if_action": {
                "type": "origins:if_else",
                "condition": {
                    "type": "origins:power", "inverted": true,
                    "power": "sil_yoni:guxi/elytra",
                    "source": "sil_yoni:guxi/boost_to_sky"
                },
                 "if_action": { "type": "origins:and", "actions": [
                     {
                         "type": "origins:grant_power",
                         "power": "sil_yoni:guxi/elytra",
                         "source": "sil_yoni:guxi/boost_to_sky" }
                     ]
                }
            },
            "else_action": {
                "type": "origins:if_else",
                "condition": {
                    "type": "origins:power",
                    "power": "sil_yoni:guxi/elytra",
                    "source": "sil_yoni:guxi/boost_to_sky"
                },
                 "if_action": { "type": "origins:and", "actions": [
                     {
                         "type": "origins:revoke_power",
                         "power": "sil_yoni:guxi/elytra",
                         "source": "sil_yoni:guxi/boost_to_sky" }
                     ]
                }
            }
        }
    },
    "auto_remove_triggers": {
        "type": "origins:action_on_callback",
        "execute_chosen_when_orb": true,
        "entity_action_lost": { "type": "origins:and", "actions": [
            {
                "type": "origins:revoke_power",
                "power": "sil_yoni:guxi/elytra",
                "source": "sil_yoni:guxi/boost_to_sky" }
            ]
       }
    }
}