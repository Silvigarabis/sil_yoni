{ "hidden": true,
    "type": "origins:multiple",
    "callbacks": {
        "type": "origins:action_on_callback",
        "execute_chosen_when_orb": true,
        "entity_action_gained": {
            "type": "origins:and", "actions": [ 
            {   "type": "origins:execute_command",
                "command": "scale multiply pehkui:visibility 2.6875" }
            ]
        },
        "entity_action_respawned": {
            "type": "origins:and", "actions": [ 
            {   "type": "origins:execute_command",
                "command": "scale multiply pehkui:visibility 2.6875" }
            ]
        },
        "entity_action_lost": {
            "type": "origins:and", "actions": [ 
            {   "type": "origins:execute_command",
                "command": "scale divide pehkui:visibility 2.6875" },
            {   "type": "origins:if_else",
                "condition": {
                    "type": "origins:status_effect",
                    "effect": "minecraft:night_vision",
                    "min_amplifier": 1 },
                "if_action": {
                    "type": "origins:clear_effect",
                    "effect": "minecraft:night_vision"
                }
            },
            {   "type": "origins:if_else",
                "condition": {
                    "type": "origins:status_effect",
                    "effect": "minecraft:glowing",
                    "min_amplifier": 1 },
                "if_action": {
                    "type": "origins:clear_effect",
                    "effect": "minecraft:glowing"
                }
            } ]
        }
    },
    
    "effect_glowing": {
        "type": "origins:self_glow",
        "use_teams": false
    },
    
    "effect_night_vision": {
        "type": "origins:night_vision",
        "condition": { "type": "origins:and", "conditions": [
            {   "type": "origins:status_effect",
                "effect": "minecraft:blindness",
                "inverted": true }
            ]
        }
    },
    
    "no_darkness": {
        "condition": {
             "type": "origins:power",
             "power": "sil_yoni:glowing_vision/triggers",
             "source": "sil_yoni:glowing_vision" },
        "type": "origins:effect_immunity",
        "effect": "minecraft:darkness"
    }
}